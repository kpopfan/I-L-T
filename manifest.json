{
    "manifest_version": 2,
    "name": "I Love To Travel",
    "description": "Get each day a new gorgeous travel suggestion. Live your life. Travel!",
    "version": "1.2.6",
    "permissions": [
        "idle",
        "storage",
        "notifications",
        "alarms",
        "background"
    ],
    "background": {
        "scripts": ["js/background.js"],
        "persistent": false
    },
      "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html",
        "default_title": "I Love To Travel!"
    },
    "icons": {
        "16": "icon-16.png",
        "48": "icon-48.png",
        "128": "icon-128.png"
    }
}